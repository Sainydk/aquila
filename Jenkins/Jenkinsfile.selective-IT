pipeline {
    agent {
        dockerfile {
            args '-v /root/.m2:/root/.m2'
        }
    }
    environment {
        MAVEN_OPTS='-Xmx1024m -Xms256m -XX:MaxPermSize=256m'
    }
    stages {
        stage('Prepare') {
            steps {
                sh 'printenv | sort'
            }
        }
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
        stage('IT') {
            steps {
                sh 'cp -u web-utils/it-config/jbd.ini-docker web-utils/it-config/jbd.ini'
                sh 'mvn -B -f ${AQUILA_SELECTED_PROJECT} -DskipITs=false -Dtest=${AQUILA_SELECTED_TEST} verify'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}
